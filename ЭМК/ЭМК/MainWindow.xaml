<Window x:Class="ЭМК.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ЭМК"
        mc:Ignorable="d"
        Title="ЭМК: Городская больница №24" MinHeight="450" MinWidth="800" Icon="Image/medical_monitor_icon.ico" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20" Orientation="Vertical" HorizontalAlignment="Left">
            <Button Margin="20" Content="Список пациентов" Width="300" Click="PatientsList_Click"/>
            <Button Margin="20" Content="Прием пациентов" Width="300" Click="PatientAppointment_Click"/>
            <Button Margin="20" Content="Выход" Width="300" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
