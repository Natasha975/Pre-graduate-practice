<Page x:Class="ЭМК.PrescriptionForms.PrescriptionForm14888"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЭМК.PrescriptionForms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrescriptionForm14888" Background="White">

    <Border BorderBrush="Black" BorderThickness="1" Padding="15" Margin="10">
        <StackPanel>
            <!-- Заголовок -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Серия" Margin="0,0,10,0"/>
                <TextBox Width="50" Text="N"/>
                <TextBlock Text="20 г." Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Название рецепта -->
            <TextBlock Text="РЕЦЕПТ" HorizontalAlignment="Center" Margin="0,20,0,0" FontWeight="Bold"/>
            <TextBlock Text="«_____»" HorizontalAlignment="Center" Margin="0,10,0,0" />

            <!-- Дата оформления -->
            <TextBlock Text="(дата оформления рецепта)" HorizontalAlignment="Center" Margin="0,10,0,0"/>

            <!-- Тип пациента -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <TextBlock Text="(взрослый, детский — нужное подчеркнуть)"/>
            </StackPanel>

            <!-- Данные пациента -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Фамилия, инициалы имени и отчества (последнее — при наличии) пациента"/>
                <TextBox Margin="0,5,0,0"/>

                <TextBlock Text="Дата рождения _____" Margin="0,10,0,0"/>
                <DatePicker Margin="0,5,0,0"/>

                <TextBlock Text="Адрес места жительства или N медицинской карты амбулаторного" Margin="0,10,0,0"/>
                <TextBlock Text="пациента, получающего медицинскую помощь в амбулаторных условиях"/>
            </StackPanel>

            <!-- Данные врача -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Фамилия, инициалы имени и отчества (последнее — при наличии) лечащего"/>
                <TextBlock Text="врача (фельдшера, акушерки)"/>
                <TextBox Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Рецепт и подпись -->
            <StackPanel Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="руб. | коп. | Rp."/>
                    <TextBox Width="200" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Right">
                    <StackPanel>
                        <TextBlock Text="Подпись и печать лечащего врача М. П."/>
                        <TextBlock Text="(подпись фельдшера, акушерки)" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Срок действия -->
            <TextBlock Text="Рецепт действителен в течение 15 дней," Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Page>
